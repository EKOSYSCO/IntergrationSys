@model Intergration.Models.CustomerDataViewModel;
@{
    ViewData["Title"] = "Home Page";
}


<div class="row p-20">
    <div class="col-3">

    </div>
    @if (string.IsNullOrEmpty(ViewBag.Code))
    {

        <h1> Hello Test </h1>
    }
    else
    {

        <div class="col-6">
            <form method="post" asp-action="Update" enctype="multipart/form-data" class="MultiFile-intercepted">
                @Html.AntiForgeryToken()


                <div class="card mb-5 mb-xl-10" id="kt_profile_details_view">
                    <!--begin::Card header-->
                    <div class="card-header cursor-pointer">
                        <!--begin::Card title-->
                        <div class="card-title m-0">
                            <h3 class="fw-bolder m-0">Profile Details</h3>
                        </div>
                        <!--end::Card title-->
                        <!--begin::Action-->
                        <button type="submit" class="btn btn-primary align-self-center">Save </button>
                        <!--end::Action-->
                    </div>

                    <!--begin::Card header-->
                    <!--begin::Card body-->
                    <div class="card-body p-9">
                        <!--begin::Row-->
                        <div class="row mb-7">
                            <!--begin::Label-->
                            <label class="col-lg-4 fw-bold text-muted">Full Name</label>
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-8">
                                <span class="fw-bolder fs-6 text-gray-800"> @Model.custname</span>
                            </div>
                            <!--end::Col-->
                        </div>
                        <!--end::Row-->
                        <!--begin::Input group-->
                        <div class="row mb-7">
                            <!--begin::Label-->
                            <label class="col-lg-4 fw-bold text-muted">Age</label>
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-8 fv-row">
                                <span class="fw-bold text-gray-800 fs-6">@Model.custage @Model.agemeza</span>
                            </div>
                            <!--end::Col-->
                        </div>
                        <!--end::Input group-->
                        <div class="row mb-7">
                            <!--begin::Label-->
                            <label class="col-lg-4 fw-bold text-muted">Gender</label>
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-8 fv-row">
                                <span class="fw-bold text-gray-800 fs-6">@Model.sex</span>
                            </div>
                            <!--end::Col-->
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="row mb-7">
                            <!--begin::Label-->
                            <label class="col-lg-4 fw-bold text-muted">Doctor</label>
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-8 fv-row">
                                <span class="fw-bold text-gray-800 fs-6">@Model.doctorname</span>
                            </div>
                            <!--end::Col-->
                        </div>

                        <div class="row mb-7">
                            <!--begin::Label-->
                            <label class="col-lg-4 fw-bold text-muted">Address</label>
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-8 fv-row">
                                <span class="fw-bold text-gray-800 fs-6">@Model.custadd</span>
                            </div>
                            <!--end::Col-->
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="row mb-10">
                            <!--begin::Label-->
                            <label class="col-lg-4 fw-bold text-muted">Comment</label>
                            <!--begin::Label-->
                            <!--begin::Label-->
                            <div class="col-lg-8">
                                <span   class="fw-bold fs-6 text-gray-800">@Model.comment</span>
                            </div>
                            <!--begin::Label-->
                            <input asp-for="custname" hidden />
                            <input asp-for="custage" hidden />
                            <input asp-for="ename" hidden />
                            <input asp-for="custmob" hidden />
                            <input asp-for="doctorname" hidden />
                            <input asp-for="custtel" hidden />
                            <input asp-for="sex" hidden />
                            <input asp-for="comment" hidden />
                            <input asp-for="agemeza" hidden />
                            <input asp-for="custadd" hidden />

                        </div>
                        <!--end::Input group-->
                        <div class="form-floating">
                            <textarea asp-for=@Model.CallComment class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px">
                             
                        </textarea>
                            <label for="floatingTextarea2">Call Comment</label>
                        </div>
                    </div>
                    <!--end::Card body-->
                </div>

            </form>
        </div>
    }

    <div class="col-3">

    </div>

</div>

